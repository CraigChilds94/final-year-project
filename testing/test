#!/bin/bash

# Delay between each test
delay=1

#### Mass connection tests
# 10 Connections
php run_tests name=mass_connections/10_connections/test_1
sleep $delay
php run_tests name=mass_connections/10_connections/test_5/
sleep $delay
php run_tests name=mass_connections/10_connections/test_10/
sleep $delay
# 100 Connections
php run_tests name=mass_connections/100_connections/test_1
sleep $delay
php run_tests name=mass_connections/100_connections/test_50/
sleep $delay
php run_tests name=mass_connections/100_connections/test_100/
sleep $delay
# 1,000 Connections
php run_tests name=mass_connections/1000_connections/test_1
sleep $delay
php run_tests name=mass_connections/1000_connections/test_500/
sleep $delay
php run_tests name=mass_connections/1000_connections/test_1000/
sleep $delay
# 10,000 Connections
php run_tests name=mass_connections/10000_connections/test_1
sleep $delay
php run_tests name=mass_connections/10000_connections/test_5000/
sleep $delay
php run_tests name=mass_connections/10000_connections/test_10000/
sleep $delay
